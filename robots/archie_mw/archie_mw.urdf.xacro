  </gazebo> -->
  <link name="base_link" />

  <!-- Base link macro -->
  <xacro:archie_mw_base name="base_footprint" parent="base_link" lenght="${chassis_lenght}" 
    width="${chassis_width}" height="${chassis_height}" mass="${chassis_weight}" 
    color="Yellow" z_offset="${chassis_center_to_base_footprint_z_offset}">
    <joint_origin xyz="0 0 0" rpy="0 0 0" />
  </xacro:archie_mw_base>
  

<!-- **** ELECTRONICS BOX (MODULE) - height 100 mm ****  -->
<!-- /batteries height is 76 mm whenlaying on the side. -->
<!-- can accomadete, not only Raspberry PI 4 with passive cooling case,  -->
<!-- but also  Intel NUC in the big case 51 mm height/ -->

<!-- ! The Joint is positioned on top plane of the chassis (base_link) module -->
  <xacro:fixed_joint name="electronics_box" parent_name="base_footprint" child_name="electronics_box" color="Grey">
    <origin xyz="0 0 ${(chassis_center_to_base_footprint_z_offset + chassis_half_height)}" rpy="0 0 0" />
  </xacro:fixed_joint>

  <xacro:box_link name="electronics_box" lenght="${electronics_box_lenght}" width="${electronics_box_width}" height="${electronics_box_height}" mass="${electronics_box_weight}" color="Light_grey">
    <origin xyz="0 0 0" rpy="0 0 0" />
  </xacro:box_link>

  <!-- Invoke Wheel Macros -->

  <xacro:mecanum_wheel_152 name="archie_mw_mecanum_wheel_front_left" parent="base_footprint" diameter="${wheel_diameter}" width="${wheel_width}" mass="${wheel_weight}" color="White"
      mesh_file_name="package://archie_simulation/robots/archie_mw/meshes/mecanum_wheel_left.STL" mesh_scale_x="${1*SCALE_mm_to_m}"
      mesh_scale_y="${0.92*SCALE_mm_to_m}" mesh_scale_z="${1.52*SCALE_mm_to_m}">
    <origin xyz="${left_front_wheel_x_offset} ${left_front_wheel_y_offset+shaft_lenght} ${left_front_wheel_z_offset}" rpy="0 0 0" />
  </xacro:mecanum_wheel_152>

  <xacro:mecanum_wheel_152 name="archie_mw_mecanum_wheel_front_right" parent="base_link" diameter="${wheel_diameter}" width="${wheel_width}" mass="${wheel_weight}" color="White"
      mesh_file_name="package://archie_simulation/robots/archie_mw/meshes/mecanum_wheel_right.STL" mesh_scale_x="${1*SCALE_mm_to_m}"
      mesh_scale_y="${0.92*SCALE_mm_to_m}" mesh_scale_z="${1.52*SCALE_mm_to_m}">
    <origin xyz="${left_front_wheel_x_offset} ${-(left_front_wheel_y_offset+shaft_lenght)} ${left_front_wheel_z_offset}" rpy="0 0 0" />
  </xacro:mecanum_wheel_152>

  <xacro:mecanum_wheel_152 name="archie_mw_mecanum_wheel_back_left" parent="base_link" diameter="${wheel_diameter}" width="${wheel_width}" mass="${wheel_weight}" color="White"
      mesh_file_name="package://archie_simulation/robots/archie_mw/meshes/mecanum_wheel_left.STL" mesh_scale_x="${1*SCALE_mm_to_m}"
      mesh_scale_y="${0.92*SCALE_mm_to_m}" mesh_scale_z="${1.52*SCALE_mm_to_m}">
    <origin xyz="${-left_front_wheel_x_offset} ${left_front_wheel_y_offset+shaft_lenght} ${left_front_wheel_z_offset}" rpy="0 0 0" />
  </xacro:mecanum_wheel_152>

  <xacro:mecanum_wheel_152 name="archie_mw_mecanum_wheel_back_right" parent="base_link" diameter="${wheel_diameter}" width="${wheel_width}" mass="${wheel_weight}" color="White"
      mesh_file_name="package://archie_simulation/robots/archie_mw/meshes/mecanum_wheel_right.STL" mesh_scale_x="${1*SCALE_mm_to_m}"
      mesh_scale_y="${0.92*SCALE_mm_to_m}" mesh_scale_z="${1.52*SCALE_mm_to_m}">
    <origin xyz="${-left_front_wheel_x_offset} ${-(left_front_wheel_y_offset+shaft_lenght)} ${left_front_wheel_z_offset}" rpy="0 0 0" />
  </xacro:mecanum_wheel_152>


    <!-- BASE-FOOTPRINT -->
  <!-- base_footprint is a fictitious link(frame) that is on the ground right below base_link origin -->
<!-- TODO Here base_link is used insted of base_footprint CHANGE THE TWO!!!  -->
  <!-- <link name="base_link">
    <visual>
        <origin xyz="0 0 0" rpy="0 0 0" />
